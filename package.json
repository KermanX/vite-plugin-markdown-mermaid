{
  "name": "vite-plugin-markdown-mermaid",
  "version": "1.0.1",
  "description": "Import markdown files in vite, with Mermaid rendering support.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup"
  },
  "keywords": [
    "vite",
    "frontmatter",
    "mermaid",
    "markdown",
    "react",
    "vue"
  ],
  "author": "_Kerman <KermanX@qq.com>",
  "contributors": [
    "Kengo Hamasaki <k.hamasaki@gmail.com>",
    "sapphi-red <green@sapphi.red>",
    "Alex Zheng <zhibo90@gmail.com>",
    "Dafrok <o.o@mug.dog>",
    "Carretta Riccardo <carrystudios@gmail.com>",
    "John Sanders <jws121295@gmail.com>",
    "Stefan van Herwijnen <stefan@devliert.info>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KermanX/vite-plugin-markdown-mermaid.git"
  },
  "bugs": {
    "url": "https://github.com/KermanX/vite-plugin-markdown-mermaid/issues"
  },
  "homepage": "https://github.com/KermanX/vite-plugin-markdown-mermaid/tree/main/#readme",
  "dependencies": {
    "@babel/core": "^7.22.8",
    "@vue/compiler-sfc": "^3.3.4",
    "domhandler": "^4.3.1",
    "front-matter": "^4.0.2",
    "htmlparser2": "^6.1.0",
    "markdown-it": "^12.3.2",
    "node-mermaid-render": "^1.0.2"
  },
  "peerDependencies": {
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^16.18.38",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  }
}
